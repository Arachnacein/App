<MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="3">
    <MudStack Row="true" Spacing="2">
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-mr-2">Total saves:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Success">@TotalSaves</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-ml-4 mud-mr-2">Total expenses:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Secondary">@TotalExpenses</MudText>
    </MudStack>
    <MudStack Row="true" Spacing="2">
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-mr-2">Total saves last 3 months:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Success">@Total3MonthsSaves</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-ml-4 mud-mr-2" >Total expenses last 3 months:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Secondary">@Total3MonthsExpenses</MudText>
    </MudStack>
    <MudStack Row="true" Spacing="2">
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-mr-2">Average saves:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Success">@AverageSaves</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0 mud-ml-4 mud-mr-2">Average expenses:</MudText>
        <MudText Typo="Typo.h6" Class="mud-mb-0" Color="Color.Secondary">@AverageExpenses</MudText>
    </MudStack>
</MudStack>

<MudStack Row="true" Spacing="6" AlignItems="AlignItems.Center" Justify="Justify.Center" Class="ma-4">
    <!-- Category distribution chart -->
    <MudPaper Width="25%" Height="330px" Elevation="3" Class="mud-pa-2">
        <MudChart ChartType="ChartType.Pie" InputData="@CategoriesDistribution.ToArray()"
                  InputLabels="@CategoriesDistribution.GetPropertyNames()"
                  Width="70%" Height="70%" LegendPosition="Position.Bottom" Class="ma-2 pa-2 mt-8" />
    </MudPaper>

    <!-- Monthly category distribution chart -->
    <MudPaper Width="70%" Height="330px" Elevation="3" Class="mud-pa-2">
        <MudChart ChartType="ChartType.StackedBar" ChartSeries="@Series" XAxisLabels="@XaxisLabels"
                  Width="80%" Height="30%" LegendPosition="Position.Right" Class="ma-2 pa-2"/>
    </MudPaper>
</MudStack>