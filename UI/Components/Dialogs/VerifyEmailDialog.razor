<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="ma-2 pa-2" Style="text-align:center">@Localizer["VerifyEmailHeader"]</MudText>
        <MudText Typo="Typo.body2" Style="text-align:center">@Localizer["VerifyEmailBody"]</MudText>
        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Class="mt-2 pt-1">
            <MudButton Color="Color.Secondary" OnClick="Send" Variant="Variant.Filled" Class="ma-2 pa-2">@Localizer["Send"]</MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>