@using UI.Models
<MudDialog>
    <DialogContent>
        <MudText @bind-vale="contextModel.Pattern.Name" />
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.Center" Style="width:75%;">
            <MudSelect T="PatternViewModel" @bind-Value="patternModel" Placeholder="Choose pattern" Variant="Variant.Outlined" Class="ma-1 pa-1" Dense="true">
                @foreach (var item in patterns)
                {
                    <MudSelectItem Value="@item">@item.Name (@item.Value_Saves/@item.Value_Fees/@item.Value_Entertainment)</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary">Submit</MudButton>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>