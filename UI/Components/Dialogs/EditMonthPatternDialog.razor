@using UI.Models
@using UI.Models.ViewModels

<MudDialog>
    <DialogContent>
        <MudText @bind-vale="contextModel.Pattern.Name" />
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.Center" Style="width:75%;">
            <MudSelect T="PatternViewModel" @bind-Value="patternModel" Placeholder="@Localizer["Placeholder"]" 
                       Variant="Variant.Outlined" Class="ma-1 pa-1" ToStringFunc="(x => x.Name)" Dense="true">
                @foreach (var item in patterns)
                {
                    <MudSelectItem T="PatternViewModel" Value="@item">@item.Name (@item.Value_Saves/@item.Value_Fees/@item.Value_Entertainment)</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Primary">@Localizer["Submit"]</MudButton>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">@Localizer["Cancel"]</MudButton>
    </DialogActions>
</MudDialog>