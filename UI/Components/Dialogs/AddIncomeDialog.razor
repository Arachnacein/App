<MudDialog>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="DialogModel.Name" Class="ma-1 pa-1" Style="width: 50%;" />

        <MudTextField T="double" Label="Price" @bind-Value="DialogModel.Amount" Class="ma-2 pa-2"></MudTextField>

        <MudStack Row="true" Spacing="4" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudDatePicker Label="Calendar" @bind-Date="DialogModel.Date" ShowToolbar="false" Class="ma-2 pa-2 ml-8" />
        </MudStack>
    
    
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Tertiary">Submit</MudButton>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>