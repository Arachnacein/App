<MudForm Model="@DialogModel" @ref="@Form" Validation="TransactionValidator.ValidateValue()" ValidationDelay="0">
    <MudDialog Style="height:515px;">
        <DialogContent>
            <MudTabs Class="ma-2 pa-2" Elevation="5" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
                @if(DialogModel.IsRecurring == true && DialogModel.IsApproved == false)
                {
                    <MudTabPanel Text="@Localizer["TabPanelConfirmTransaction"]">
                        <MudText Class="ma-1 pa-1">@Localizer["Name"]: @DialogModel.Name</MudText>
                        <MudText Class="ma-1 pa-1">@Localizer["Description"]: @DialogModel.Description</MudText>
                        <MudText Class="ma-1 pa-1">@Localizer["Date"]: @DialogModel.Date.FormatDMY() </MudText>
                        <MudButton OnClick="AcceptTransaction" Class="ma-2 pa-2 float-end"
                                Color="Color.Primary" Variant="Variant.Filled">@Localizer["Confirm"]</MudButton>
                    </MudTabPanel>
                }
                <MudTabPanel Text="@Localizer["TabPanelEdit"]">
                    <MudTextField Label="@Localizer["Name"]" @bind-Value="DialogModel.Name" 
                                  For="@(() => DialogModel.Name)" Class="ma-1 pa-1" />
                    <MudTextField Label="@Localizer["Description"]" @bind-Value="DialogModel.Description" 
                                  For="@(() => DialogModel.Description)" Class="ma-1 pa-1" />
                    <MudDatePicker Label="@Localizer["Date"]" @bind-Date="DialogModel.Date" 
                                   ShowToolbar="false" Class="ma-1 pa-1" />
                    <MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">
                        <MudTextField T="double" Label="@Localizer["Price"]" @bind-Value="DialogModel.Price" 
                                      For="@(() => DialogModel.Price)" Class="ma-1 pa-1"></MudTextField>
                        <MudButton OnClick="Edit" Variant="Variant.Filled" Color="Color.Primary" 
                                   style="height:80%;">@Localizer["Confirm"]</MudButton>
                    </MudStack>
                </MudTabPanel>
                <MudTabPanel Text="@Localizer["TabPanelDelete"]">
                    <MudText Class="ma-1 pa-1">@Localizer["DeleteQuestion"]</MudText>
                    <MudText Class="ma-1 pa-1"> @Localizer["Name"]: @DialogModel.Name</MudText>
                    <MudText Class="ma-1 pa-1"> @Localizer["Date"]: @DialogModel.Date.FormatDMY()</MudText>
                    <MudText Class="ma-1 pa-1"> @Localizer["Price"]: @DialogModel.Price</MudText>
                    <MudButton Class="ma-2 pa-2 float-end" OnClick="Delete" 
                               Variant="Variant.Filled" Color="Color.Primary">@Localizer["Delete"]</MudButton>
                </MudTabPanel>
            </MudTabs>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">@Localizer["Cancel"]</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>