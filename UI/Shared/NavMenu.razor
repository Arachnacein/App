@inject IStringLocalizer<NavMenu> Localizer

<MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Style="width:100%;">
    <MudStack Row="true" Justify="Justify.FlexStart">
        <NavLink href="" class="nav-main-menu-item"><MudButton StartIcon="@Icons.Material.Filled.Home" IconSize="Size.Large" Size="Size.Large" Color="Color.Secondary">@Localizer["Home"]</MudButton></NavLink>
        <NavLink href="/budget" class="nav-main-menu-item"><MudButton IconSize="Size.Large" Size="Size.Large" Color="Color.Secondary"> @Localizer["Budget"] </MudButton></NavLink>
    </MudStack>
    <MudStack Row="true" Justify="Justify.FlexEnd" Class="mr-5">
        <MudMenu Icon="@Icons.Material.Filled.Language" Size="Size.Large" Color="Color.Secondary"
                  AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <MudMenuItem OnClick="SetEnglish">
                <MudImage Src="Images/InternationalizationIcons/united-kingdom.png" Width="38" Height="30" />
                @Localizer["English"]
            </MudMenuItem>
            <MudMenuItem OnClick="SetPolish">
                <MudImage Src="Images/InternationalizationIcons/poland.png" Width="38" Height="30" />
                @Localizer["Polish"]
            </MudMenuItem>
        </MudMenu>
        <NavLink href="/options" class="nav-main-menu-item"><MudIconButton Icon="@Icons.Material.Filled.Settings" IconSize="Size.Large" Size="Size.Large" Color="Color.Secondary"></MudIconButton></NavLink>
        <MudMenu Icon="@Icons.Material.Filled.AccountCircle" Size="Size.Large" Color="Color.Secondary"
                 AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <MudMenuItem Href="/options/account">
                @Localizer["Account"]
                <MudIcon Icon="@Icons.Material.Filled.Person"/>
            </MudMenuItem>
            <MudMenuItem OnClick="LogIn">
                @Localizer["LogIn"]
                <MudIcon Icon="@Icons.Material.Filled.Login"/>
            </MudMenuItem>            
            <MudMenuItem OnClick="LogOut">
                @Localizer["LogOut"]
                <MudIcon Icon="@Icons.Material.Filled.Logout"/>
            </MudMenuItem>            
            <MudMenuItem OnClick="Register">
                @Localizer["Register"]
                <MudIcon Icon="@Icons.Material.Filled.PersonAddAlt1"/>
            </MudMenuItem>
        </MudMenu>
    </MudStack>
</MudStack>

@* Icons from https://www.flaticon.com/packs/international-flags *@